<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--bean using <value tag>-->
    <bean class="com.spring.core.p1.basic.Student" name="student1">
        <property name="id">
            <value>19016</value>
        </property>
        <property name="name">
            <value>Md. Tanver Ahammed</value>
        </property>
        <property name="address">
            <value>Joypurhat</value>
        </property>
    </bean>

    <!--bean using value as attribute-->
    <bean class="com.spring.core.p1.basic.Student" name="student2">
        <property name="id" value="19017"/>
        <property name="name" value="Sheuly Akter"/>
        <property name="address" value="Tangail"/>
    </bean>

    <!--bean using value as p schema-->
    <bean class="com.spring.core.p1.basic.Student" name="student3" p:id="19018" p:name="Tariq Islam"
          p:address="Tangail"/>

</beans>